<% include ../header %>


<div class="container-fluid">

    <div class="row">

        <div class="col-8">
            <h3 class="mt-3 result-search">Kết quả tìm kiếm</h3>
            <ul class="list-group">
                <% data.forEach((motsp)=>{ %>

                <li class="list-group-item">

                        <img class = "imgSearch" src="<%= motsp.avatarStory %>"
                            alt="">
                        <a href="/about/<%= motsp.idStory %>"><%= motsp.nameStory %></a>

                </li>


                <%})%>
        </ul>
        </div>

        <div class="col-4">
        <h3 class = "mt-5">Truyện đề xuất</h3>
            <ul class="list-group">
                <% propose.forEach(function(motsp){ %>
                    <% if(data.includes(motsp) == false){ %>
                        <li class="list-group-item">
                            <img src="<%= motsp.avatarStory%>"
                                alt="" class = "story-list">
                            <a href="/about/<%= motsp.idStory%>"><%= motsp.nameStory%></a>
                        </li>
                    <%}%>

                <%})%>
            </ul>
        </div>

    </div>

</div>

<% include ../footer %>